@model IEnumerable<LibrariaMVC.Models.Libri>
@{
    ViewBag.Title = "Dyqani";
}
<h3>Shfleto zhanret</h3>

<p>
    Zgjedhni nga @Model.Count() libra:</p>

<table id="tabela">
 @foreach (var album in Model)
        {
      <tr>
        <th>
            Libri Titulli
        </th>
        
        <th>
           Autori
        </th>
     
    </tr>
     <tr>
     <td>
            <a href="@Url.Action("Details", new { id = album.LibriId })">
                  <img alt="@album.Title" src="@album.AlbumArtUrl"  width ="100" height="100" /></a>
                   </td><td>
                    <span>@album.Title <br>@album.Autori.Name</span>
                    
               
           </td> </tr>
 }
               </table>